<head>
  <meta charset="utf-8" />

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width" />

  <title>Memenator | Curated Shareables</title>

  <!-- Included CSS Files (Compressed) -->
  <link rel="stylesheet" href="/css/general_enclosed_foundicons.css">
  <link rel="stylesheet" href="/css/foundation.min.css">
  <link rel="stylesheet" href="/css/app.css">

  <script src="/js/modernizr.foundation.js"></script>
</head>
<body>

  <div class="fixed contain-to-grid">
   <nav class="top-bar">
      <ul>
        <li class="name"><h1><a href="/">Memenator</a></h1></li>
        <li class="toggle-topbar"><a href="/"></a></li>
      </ul>
      <section>
        <ul class="left">
          <li><a href="#" data-reveal-id="newVid">Add Video</a></li>
        </ul>
        <ul class="left">
          <li><a href="/video/star">My Favorites</a></li>
        </ul>
        <% @nav_rows.each do |row| %>
        <ul class="left">
          <li><a href='/video/<%= row %>'><%= row.capitalize %></a></li>
        </ul>
        <% end %>
      </section>
    </nav>
  </div>

  <div class="row">
    <div class="twelve columns headtext">
      <h1><span>The</span> Memenator</h1>
      <h2>Curated Shareables.</h2>
    </div>
  </div>

  <%= yield %>

  <footer class="row">
    <div class="twelve columns">
      <hr />
      <div class="row">
        <div class="six columns">
          <p>&copy; Copyright bryanwreid.com. Thanks for checking out this project.</p>
        </div>
        <div class="six columns">
          <ul class="link-list right">
            <li><a href="http://foundation.zurb.com/">Foundation</a></li>
            <li><a href="http://www.bryanwreid.com/contact">Contact</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

  <div id="newVid" class="reveal-modal">
    <h2>Add a Video</h2>
    <%= erb :new %>
    <a class="close-reveal-modal">Ã—</a>
  </div>

  <!-- Included JS Files (Compressed) -->
  <script src="/js/jquery.js"></script>
  <script src="/js/foundation.min.js"></script>
  <script src="/js/foundation.forms.js"></script>

  <!-- Initialize JS Plugins -->
  <script src="/js/app.js"></script>

</body>
</html>
